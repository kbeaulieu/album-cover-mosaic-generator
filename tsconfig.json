{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "module": "commonjs",
    "importHelpers": true,
    "outDir": "./dist",
    "target": "es5",
    "lib": [
      "ESNext"
    ],
    "baseUrl": "./src",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": [
    "src/**/*"
  ]
}
